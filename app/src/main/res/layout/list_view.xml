<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_mask"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/nama_cmp"
                android:text="Nama Perusahaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/coverallsuit"
                android:text="Coverall Suit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_cmp"
                android:layout_toRightOf="@id/icon"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/isicoverallsuit"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_cmp"
                android:layout_toRightOf="@id/coverallsuit"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/surgicalmask"
                android:text="Surgical Mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coverallsuit"
                android:layout_toRightOf="@id/icon"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/isisurgicalmask"
                android:text="@string/selengkapnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isicoverallsuit"
                android:layout_toRightOf="@id/surgicalmask"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/kotaa"
                android:text="Kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/surgicalmask"
                android:layout_toRightOf="@id/icon"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/icon"
                android:layout_below="@id/kotaa"
                android:textSize="10dp"
                android:text="Detail"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textColor="@color/colorDark"
                android:id="@id/btn_detail"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>